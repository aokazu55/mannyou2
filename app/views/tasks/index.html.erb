<p id="notice"><%= notice %></p>

<h1><%= t '.Tasks' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.Title' %></th>
      <th><%= t '.Content' %></th>
      <th><%= t '.Deadline' %></th>
      <th><%= t '.Priority' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('tasks.index.Show'), task %></td>
        <td><%= link_to t('tasks.index.Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('tasks.index.Destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('tasks.index.New Task'), new_task_path %>
