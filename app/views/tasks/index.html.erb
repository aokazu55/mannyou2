<p id="notice"><%= notice %></p>

<h1><%= t '.Tasks' %></h1>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位ソートする", tasks_path(sort_priority: "true") %>

<%= form_with( model: Task.new, local: true, url: tasks_path, method: 'get' ) do |f| %>
  <%= f.label :title_search, "タイトルで検索" %>
  <%= f.text_field :title %>

  <%= f.label :status_search, "ステータスで検索" %>
  <%= f.select :status, [["",""],["未着手",'未着手'], ["着手中", '着手中'], ["完了", '完了']] %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t '.Title' %></th>
      <th><%= t '.Content' %></th>
      <th><%= t '.Deadline' %></th>
      <th><%= t '.Priority' %></th>
      <th><%= t '.Status' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('tasks.index.Show'), task %></td>
        <td><%= link_to t('tasks.index.Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('tasks.index.Destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('tasks.index.New Task'), new_task_path %>
