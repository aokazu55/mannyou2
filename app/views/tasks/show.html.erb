<p id="notice"><%= notice %></p>

<h1><%= t '.Task_detail' %></h1>

<p>
  <strong><%= t '.Title' %>:</strong>
  <%= @task.title %>
</p>

<p>
  <strong><%= t '.Content' %>:</strong>
  <%= @task.content %>
</p>

<p>
  <strong><%= t '.Deadline' %>:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong><%= t '.Priority' %>:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong><%= t '.Status' %>:</strong>
