<h1>User_Page</h1>

<ul>
  <li><%= @user.name %></li>
  <li><%= @user.email %></li>
  <% if @user.admin? %>
    <li>administrator</li>
  <% else %>
    <li>public_user</li>
  <% end %>
</ul>

<% if current_user.admin? %>
  <div class="table-responsive">
    <table class ="table table-sm text-center table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope><%= t '.Title' %></th>
          <th scope><%= t '.Content' %></th>
          <th scope><%= t '.Deadline' %></th>
          <th scope><%= t '.Priority' %></th>
          <th scope><%= t '.Status' %></th>
          <th colspan="3"><%= t '.What_to_do' %></th>
        </tr>
      </thead>
      <tbody>
        <% @user.tasks.each do |task| %>
          <tr class = ".users">
            <td>※</td>
            <td><%= task.title%></td>
            <td><%= task.deadline %></td>
            <td><%= task.priority %></td>
            <td><%= task.status %></td>
            <td><%= @user.name %></td>
            <td><%= link_to t('users.show.Edit'), edit_task_path(task) %></td>
            <td><%= link_to t('users.show.Destroy'), task, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
<% end %>
