<h1>Administrator_View</h1>
<div class="container">
  <div class="table-responsive">
    <table class ="table table-sm text-center table-striped">
      <thead class="thead-dark">
        <tr scope="col">
          <th><%= t '.User_id' %></th>
          <th><%= t '.user_name' %></th>
          <th><%= t '.count_tasks' %></th>
          <th><%= t '.what_have_to_do' %></th>
          <th><%= t '.authority' %></th>
          <th><%= t '.destroy' %></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <% if user.admin? %>
            <td style="font-weight:bold;"><%= user.name %></td>
          <% else %>
            <td><%= user.name %></td>
          <% end %>
          <td><%= user.tasks.size %></td>
          <td><%= link_to 'Show', admin_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy',[:admin, user], method: :delete, data: { confirm: 'このアカウントを削除しますか？' } %></td>
        </tr>
      <% end %>
      <tbody>
    </table>
  </div>
</div>
